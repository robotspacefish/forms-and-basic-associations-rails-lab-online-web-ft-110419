<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre %><br>

  <%= f.collection_select :genre_id, @genres, :id, :name %>

  <fieldset>
    <legend>Notes</legend>
    <%= f.fields_for :notes do |note_field| %>
      <%= note_field.label :note %>
      <%= note_field.text_area :content %><br>
    <% end %>
  </fieldset>

  <%= f.submit %>
<% end %>


